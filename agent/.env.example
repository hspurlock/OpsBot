# OpsBot Deployment Agent Environment Configuration

# OpsBot Server Connection
OPSBOT_HOST=localhost
OPSBOT_PORT=8080
OPSBOT_USE_HTTPS=false
OPSBOT_API_KEY=your-api-key

# Agent Configuration
AGENT_ID=agent-1
AGENT_POLL_INTERVAL=30000
AGENT_WORK_DIR=/tmp/opsbot-agent

# Local API Server
API_PORT=8081

# Azure Authentication (for Terraform)
ARM_SUBSCRIPTION_ID=your-subscription-id
ARM_TENANT_ID=your-tenant-id
ARM_CLIENT_ID=your-client-id
ARM_CLIENT_SECRET=your-client-secret
ARM_ENVIRONMENT=AzureUSGovernment
